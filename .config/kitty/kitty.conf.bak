
font_family      mononiki Nerd Font 
bold_font        mononiki Nerd Font Bold
italic_font      mononiki Nerd Font Italic
bold_italic_font mononiki Nerd Font Bold Italic
# Nerd Fonts v3.1.0

symbol_map U+e000-U+e00a,U+ea60-U+ebeb,U+e0a0-U+e0c8,U+e0ca,U+e0cc-U+e0d4,U+e200-U+e2a9,U+e300-U+e3e3,U+e5fa-U+e6b1,U+e700-U+e7c5,U+f000-U+f2e0,U+f300-U+f372,U+f400-U+f532,U+f0001-U+f1af0 Symbols Nerd Font Mono

font_size 11.0

paste_actions replace-newline

strip_trailing_spaces smart

mouse_map middle release ungrabbed paste_from_selection

enable_audio_bell no

remember_window_size  yes
initial_window_width  1600
initial_window_height 1000

enabled_layouts tall, fat, splits, grid, horizontal, vertical

hide_window_decorations yes

tab_bar_style powerline

tab_powerline_style slanted
# other options: angled, slanted, round

tab_activity_symbol "â¬¤" 

tab_title_template "{fmt.fg.red}{bell_symbol}{activity_symbol}{fmt.fg.tab}{title}"


term xterm-256color
background_opacity 0.80

# BEGIN_KITTY_THEME
# Birds Of Paradise
include current-theme.conf
# END_KITTY_THEME
